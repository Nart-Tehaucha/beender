<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:id="@+id/AttractionPage"
    tools:context=".AttractionPage"
    android:gravity="center_horizontal"
    >


<ImageView
    android:id="@+id/attraction_image"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:scaleType="centerCrop"
    android:src="@drawable/sample1"
    />

    <TextView
        android:id="@+id/attraction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:padding="8dp"
        android:text="Attraction Title" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/star1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/star_filled"
        app:tint="?attr/colorControlNormal" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/star_filled"
        app:tint="?attr/colorControlNormal" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/star_filled"
        app:tint="?attr/colorControlNormal" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/star_filled"
        app:tint="?attr/colorControlNormal" />

    <ImageView
        android:id="@+id/star5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/star_half"
        app:tint="?attr/colorControlNormal" />

</LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Description"
        />
<TextView
    android:id="@+id/attraction_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:textSize="14sp"
    android:text="This is a very cool place with lots of cool stuff or something.
This is a place holder description, all of this will eventually come from Google obviously,
I just need some text here to see how it will look"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Reviews"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="14sp"
        android:text="★★★★★ Great place to visit"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="14sp"
        android:text="★★★★☆ Beautiful view"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="14sp"
        android:text="★★★★☆ Very historic"
        />


</LinearLayout>